enum OriginCategory {
  DOMESTIC
  INTERNATIONAL
  UNKNOWN
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Part {
  id             Int     @id @default(autoincrement())
  sku            String  @unique
  name           String
  unitPrice      Float?
  weightKg       Float?
  originCountry  String  @default("US") // ISO 3166-1 alpha-2 (US, CA, MX, ...)
  originCategory OriginCategory @default(UNKNOWN)
  isDomestic     Boolean @default(false) // keep for now, weâ€™ll deprecate later
}

model ComponentMap {
  id           Int     @id @default(autoincrement())
  auroraName   String
  manufacturer String?
  partSku      String

  @@unique([auroraName, manufacturer])
}
